<?xml version="1.0" encoding="utf-8"?>

<layout  xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         xmlns:app="http://schemas.android.com/apk/res-auto" >

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/text_valor"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:inputType="number|numberDecimal" android:textSize="20sp"
            android:fontFamily="@font/roboto" app:layout_constraintBaseline_toBaselineOf="@+id/button_moneda"
            app:layout_constraintEnd_toStartOf="@+id/button_moneda" android:hint="1" android:textAlignment="center"/>
    <Button
            android:text="@string/moneda_button"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_moneda" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="20sp" android:fontFamily="@font/roboto"
            app:layout_constraintStart_toEndOf="@+id/text_valor" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.119"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/text_valor2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:inputType="number|numberDecimal"
            app:layout_constraintEnd_toStartOf="@+id/button_moneda2"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_moneda2" android:hint="1.14"
            android:textAlignment="center"/>
    <Button
            android:text="@string/button_moneda2"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_moneda2" app:layout_constraintStart_toEndOf="@+id/text_valor2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_moneda"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.392"
            android:textSize="20sp" android:fontFamily="@font/roboto"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_info" android:text="@string/text_info"
            android:textSize="20sp" android:fontFamily="@font/roboto" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text_valor2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_valor" app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintVertical_bias="0.551"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_convertir"
            android:text="@string/button_convert" android:fontFamily="@font/roboto" android:textSize="24sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_valor2"
            app:layout_constraintVertical_bias="0.397"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/inverse_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_moneda" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_moneda2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.905"
            app:layout_constraintVertical_bias="0.56" android:contentDescription="inverse button"/>
    </android.support.constraint.ConstraintLayout>

</layout>